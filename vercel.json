{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "memory": 2048,
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    { "src": "/api/chat", "dest": "/api/index.py" },
    { "src": "/health", "dest": "/api/index.py" },
    { "src": "/openapi.json", "dest": "/api/index.py" },
    { "src": "/docs(.*)", "dest": "/api/index.py" },
    { "src": "/", "dest": "/api/index.py" }
  ]
}
