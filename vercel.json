{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.11",
      "memory": 2048,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/ai/chat", "destination": "api/index.py" },
    { "source": "/health", "destination": "api/index.py" },
    { "source": "/openai.json", "destination": "api/index.py" },
    { "source": "/(.*)", "destination": "api/index.py" }
  ]
}
