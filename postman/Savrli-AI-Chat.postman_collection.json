{
  "info": {
    "name": "Savrli AI Chat",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "Chat - Recommendation",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Response has content\", function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('response');",
              "    pm.expect(jsonData.response).to.be.a('string').that.is.not.empty;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"prompt\": \"Recommend a travel spot for a weekend getaway\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/ai/chat",
          "host": ["{{base_url}}"],
          "path": ["ai", "chat"]
        }
      }
    },
    {
      "name": "Chat - Error (Empty Prompt)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"prompt\": \"\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/ai/chat",
          "host": ["{{base_url}}"],
          "path": ["ai", "chat"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://savrli.vercel.app"
    }
  ]
}